!!!
%html
  %head
    %title Movingteachings
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %link{:href => "/assets/css/bootstrap-responsive.css", :rel => "stylesheet"}
  %body{ 'ng-app' => 'movingteachings', 'ng-controller' => "MainCtrl" }
    .container-fluid.movingteachings
      .row-fluid
        .span12
          - if current_user
            .btn= link_to "Take a class", "/classes/learn"
            .btn= link_to "Teach a class", "/classes/teach"
            .identity
              %span.visible-desktop
                = current_user.name
                = current_user.printable_provider
              .btn= link_to "Logout", destroy_user_session_path(), :method => :delete
          - else
            = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)
            = link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2)
        - if current_user
          = yield

